.InputContainer
  margin 0 0 15px
  width 100%
  :global .react-datepicker-wrapper, :global .react-datepicker__input-container
    display block

.Label
  display block
  font-weight 400
  padding 5px 15px

.Input
  background-color #fff
  border 1px solid #ccc
  font-size 16px 
  outline none
  padding 6px 10px
  text-align center
  width 100%
  &:focus
    border-color #09f
    outline none
